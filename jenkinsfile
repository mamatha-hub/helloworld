pipeline {

    agent 
    { 
            label 'jenkins_slave'
    }
     stages {
    
        stage('Build') {   
        agent
        {
        docker
        {
        
        image 'maven:3-jdk-8-alpine'
        args '-v/data/jenkins/tools/maven/.m2:/root/.m2'
        }
        }
            steps {
                sh 'mvn clean package'
            }
        }
        }
        }
