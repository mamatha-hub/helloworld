pipeline {
      agent 
    { 
            
            kubernetes {
      label 'jenkins_slave'
      
      yaml """
apiVersion: v1
kind: Pod
metadata:
labels:
  component: ci
spec:
  - name: docker
    image: docker:latest
    command:
    - cat
    tty: true
    volumeMounts:
    - mountPath: /var/run/docker.sock
      name: docker-sock
  volumes:
    - name: docker-sock
      hostPath:
        path: /var/run/docker.sock
    - name: m2
      persistentVolumeClaim:
        claimName: m2
"""
}
    }

  stages {
    stage('Build') {
      steps {
        container('mavenimage') {
          sh """ mvn package -DskipTests """
        }
      }
    }
    stage('BuildImage') {
      steps {
        container('dockerimage') {
          sh """ docker login -u demodocker12 -p renmameth@12
          docker build -t demodocker12/mavenimage1 . """
        }
      }
    }
    }
    }
